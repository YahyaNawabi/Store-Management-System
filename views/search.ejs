<% layout('layout/boilerplate') %>

<h1>Search Results for "<%= query %>"</h1>
<% if (results.length === 0) { %>
  <p>No results found.</p>
<% } else { %>
  <ul>
    <% results.forEach(result => { %>
      <li>
        <strong><%= result.name %></strong> - <%= result.category %><br />
        <%= result.description %><br />
        Price: $<%= result.price %> | Stock: <%= result.stock %>
      </li>
    <% }) %>
  </ul>
<% } %>
