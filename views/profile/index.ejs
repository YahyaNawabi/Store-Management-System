<% layout('layout/boilerplate') %>

<h1>User Profile</h1>
<div class="profile-container">
  <img src="<%= user.avatar %>" alt="User Avatar" />
  <p><strong>Name:</strong> <%= user.name %></p>
  <p><strong>Email:</strong> <%= user.email %></p>
  <p><strong>Phone:</strong> <%= user.phone %></p>
</div>
